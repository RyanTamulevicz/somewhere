{
  "name": "address-input",
  "version": "1.0.0",
  "description": "International address input web component using Google's address metadata",
  "type": "module",
  "main": "dist/address-input.js",
  "types": "dist/address-input.d.ts",
  "scripts": {
    "build": "tsc && npm run build:css",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "dev": "concurrently \"tsc --watch\" \"npm run dev:css\" \"vite\"",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "fetch-data": "node scripts/fetch-address-data.js",
    "prepare": "npm run fetch-data && npm run build"
  },
  "dependencies": {
    "lit": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  },
  "keywords": [
    "web-components",
    "address",
    "international",
    "lit",
    "input"
  ],
  "license": "MIT"
}